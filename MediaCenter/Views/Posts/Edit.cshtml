@model MediaCenter.ViewModels.Posts.EditPostViewModel

@{
    ViewData["Title"] = "Изменение - Посты";
}

<h3>
    <a class="btn text-dark" asp-action="Index" title="Вернуться к списку">
        <i class="fas fa-arrow-left"></i>
    </a>
    Изменение поста
</h3>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="StatusPostTitlePost" class="control-label"></label>
                <input asp-for="StatusPostTitlePost" class="form-control" />
                <span asp-validation-for="StatusPostTitlePost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Multimedia" class="control-label"></label>
                <input asp-for="Multimedia" class="form-control" />
                <span asp-validation-for="Multimedia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DatePublication" class="control-label"></label>
                <input asp-for="DatePublication" class="form-control" />
                <span asp-validation-for="DatePublication" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdAuthor" class="control-label"></label>
                <select asp-for="IdAuthor" class="form-control" asp-items="ViewBag.IdAuthor"></select>
                <span asp-validation-for="IdAuthor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdStatus" class="control-label"></label>
                <select asp-for="IdStatus" class="form-control" asp-items="ViewBag.IdStatus"></select>
                <span asp-validation-for="IdStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
