@model MediaCenter.ViewModels.Posts.CreatePostViewModel

@{
    ViewData["Title"] = "Создание - Посты";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item"><a asp-controller="PostStatuses" asp-action="Index">Посты</a></li>
        <li class="breadcrumb-item active">Создание</li>
    </ol>
</nav>

<h3>
    <a class="btn text-dark" asp-action="Index" title="Вернуться к списку">
        <i class="fas fa-arrow-left"></i>
    </a>
    Добавление поста
</h3>
<hr />

<div class="row">
    <div class="col-md-5">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="StatusPostTitlePost" class="control-label"></label>
                <input asp-for="StatusPostTitlePost" class="form-control" />
                <span asp-validation-for="StatusPostTitlePost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Multimedia" class="control-label"></label>
                <input asp-for="Multimedia" class="form-control" />
                <span asp-validation-for="Multimedia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DatePublication" class="control-label"></label>
                <input asp-for="DatePublication" class="form-control" />
                <span asp-validation-for="DatePublication" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdAuthor" class="control-label"></label>
                <select asp-for="IdAuthor" class ="form-control" asp-items="ViewBag.IdAuthor"></select>
            </div>

            <div class="form-group">
                <label asp-for="IdStatus" class="control-label"></label>
                <select asp-for="IdStatus" class ="form-control" asp-items="ViewBag.IdStatus"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
